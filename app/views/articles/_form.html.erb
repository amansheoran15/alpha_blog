<%= form_with model: article, local: true do |f| %>
  <% if article.errors.any? %>
    <% article.errors.full_messages.each do |message| %>
      <%= message %>
    <%end %>
  <% end %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <%= f.button %>
<%end %>