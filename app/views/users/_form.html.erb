<%= form_with model: user, local: true do |f| %>
  <% if user.errors.any? %>
    <% user.errors.full_messages.each do |message| %>
      <%= message %>
    <%end %>
  <% end %>
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <%= f.button(user.new_record? ? "Sign Up" : "Update Account")%>
<%end %>